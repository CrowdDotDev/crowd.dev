{
  "compilerOptions": {
    "target": "es2017",
    "module": "Node16",
    "lib": ["es6", "es7", "es2017", "es2017.object", "es2015.promise"],
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "Node16",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@crowd/*": ["../../*/src"]
    }
  },
  "include": ["src/**/*"]
}

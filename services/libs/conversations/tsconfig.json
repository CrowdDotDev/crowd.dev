{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es6", "es7", "es2017", "es2017.object", "es2015.promise"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@crowd/*": ["../*/dist"]
    }
  },
  "include": ["src/**/*"]
}

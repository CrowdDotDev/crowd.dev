{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2017",
    "types": ["node", "jest"]
  },
  "include": [
    "src",
    "src/database/initializers/sample-data.json",
    "src/database/initializers/suggested-tasks.json"
  ],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2017",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
